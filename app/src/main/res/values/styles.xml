<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textViewStyle">@style/mulishFontStyle</item>
    </style>

    <style name="poppinsFontStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="mulishFontStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mulish</item>
    </style>

</resources>